@model RoleViewModel
@{
    ViewData["Title"] = "مثالی دیگر از یک صفحه‌ی با سطح دسترسی پویا";
}

<div class="alert alert-warning top30">
    <a href="#" class="close" data-dismiss="alert">×</a>
    @ViewData["Title"] : @ViewContext.ActionDescriptor.DisplayName
</div>


<div class="panel panel-default top30">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewData["Title"]</h3>
    </div>
    <div class="panel-body">
        <form asp-controller="DynamicPermissionsSample"
              asp-action="Index"
              role="form"
              data-ajax="true"
              data-ajax-begin="dataAjaxBegin"
              data-ajax-success="dataAjaxSuccess"
              data-ajax-failure="dataAjaxFailure"
              method="post"
              class="form-horizontal">
            @{ await Html.RenderPartialAsync("_CustomValidationSummary"); }
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input dir="ltr" asp-for="Name" class="form-control col-md-4" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-info">ارسال جهت مشاهده mvcContext.HttpContext.Request.Form</button>
                </div>
            </div>
        </form>
    </div>
</div>